{
    "id" : "io.github.gillesdegottex.FMIT",
    "branch" : "stable",
    "runtime" : "org.kde.Platform",
    "sdk" : "org.kde.Sdk",
    "runtime-version" : "5.11",
    "command" : "fmit",
    "rename-icon" : "fmit",
    "rename-desktop-file" : "fmit.desktop",
    "rename-appdata-file" : "fmit.appdata.xml",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        /* acs_alsa support */
        "--socket=pulseaudio",
        /* acs_jack support */
        "--device=all"
    ],
    "modules" : [
        {
            "name": "fftw",
            "config-opts" : [
                "--enable-shared",
                "--disable-static"
            ],
            "cleanup" : [
            	"/bin",
                "/include",
                "/lib/*.la",
                "/lib/cmake",
                "/lib/pkgconfig",
                "/share/info",
                "/share/man"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "http://www.fftw.org/fftw-3.3.8.tar.gz",
                    "md5": "8aac833c943d8e90d51b697b27d4384d"
                }
            ]
        },
        {
            "name" : "jack2",
            "buildsystem" : "simple",
            "build-commands" : [
                "python3 waf configure --prefix=/app --htmldir=/app/share/doc/jack/ --freebob=no --classic",
                "python3 waf build",
                "python3 waf install"
            ],
            "cleanup" : [
            	"/bin",
            	"/include",
            	"/share",
            	"/lib/jack",
            	"/lib/libjackserver.so*",
            	"/lib/pkgconfig"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/jackaudio/jack2/archive/v1.9.12.tar.gz",
                    "sha512" : "f0271dfc8f8e2f2489ca52f431ad4fa420665816d6c67a01a76da1d4b5ae91f6dad8c4e3309ec5e0c159c9d312ed56021ab323d74bce828ace26f1b8d477ddfa"
                }
            ]
        },
        {
            "name" : "fmit",
            "buildsystem" : "qmake",
            "config-opts" : [
                "INCLUDEPATH+=/app/include",
                "LIBS+=-L/app/lib",
                "CONFIG+=acs_alsa",
                "CONFIG+=acs_jack"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/gillesdegottex/fmit.git",
                    "commit" : "1fc7f826026cad246c5e2e7ce796098ee686441d"
                },
                {
                    /* acs_qt does not work on Linux */
                    "type" : "shell",
                    "commands" : [ "sed -i -e 's/CONFIG += acs_qt//g' fmit.pro" ]
                },
                {
                    /* must be done before calling qmake, or translations will not be installed (?) */
                    "type" : "shell",
                    "commands" : [ "lrelease fmit.pro" ]
                }
            ]
        }
    ]
}
